### AuthorizedKeys File Path ###

authorized_keys_dir: '/etc/ssh/authorized_keys'
authorized_keys_dst: '/etc/ssh/authorized_keys/{{ item.user }}'
authorized_keys_root: '/etc/ssh/authorized_keys/root'
managed_authorized_keys_dir: '/etc/ssh/authorized_keys/%u'

